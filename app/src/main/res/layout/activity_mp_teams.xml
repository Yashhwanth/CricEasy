<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/teamsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <!-- Team 1 Header -->
    <TextView
        android:id="@+id/team1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Team 1"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Team 1 Players -->
    <GridLayout
        android:id="@+id/team1PlayerGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:columnCount="5"
        android:horizontalSpacing="8dp"
        android:orientation="horizontal"
        android:verticalSpacing="8dp">

        <!-- Player Item Example -->
        <LinearLayout
            android:id="@+id/playerLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/player1ImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="4dp"
                android:contentDescription="@string/playerImage"
                android:src="@drawable/ic_player_icon" />

            <TextView
                android:id="@+id/player1TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Player Name"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Additional player items will be added programmatically -->

    </GridLayout>

    <!-- Team 2 Header -->
    <TextView
        android:id="@+id/team2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Team 2"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Team 2 Players -->
    <GridLayout
        android:id="@+id/team2PlayerGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:horizontalSpacing="8dp"
        android:orientation="horizontal"
        android:verticalSpacing="8dp">

        <!-- Player Item Example -->
        <LinearLayout
            android:id="@+id/player2LinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/player2ImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="4dp"
                android:contentDescription="@string/playerImage"
                android:src="@drawable/ic_player_icon" />

            <TextView
                android:id="@+id/player2TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Player Name"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Additional player items will be added programmatically -->

    </GridLayout>

</LinearLayout>
