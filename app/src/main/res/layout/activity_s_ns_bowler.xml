<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/selectingSNsBowLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/selectSNsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selectSNsAndBowTextView"
        style="@style/HeaderTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:id="@+id/battingTextView"
        style="@style/BaseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/battingTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />

    <LinearLayout
        android:id="@+id/selectSrLayout"
        android:layout_width="125dp"
        android:layout_height="143dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19999999">

        <ImageView
            android:id="@+id/srImageView"
            android:layout_width="wrap_content"
            android:layout_height="121dp"
            android:contentDescription="@string/selectStrikerContentDescription"
            app:srcCompat="@drawable/striker" />

        <TextView
            android:id="@+id/srTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/selectStrikerTextView" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/selectNsrLayout"
        android:layout_width="117dp"
        android:layout_height="142dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19999999">

        <ImageView
            android:id="@+id/nSrImageView"
            android:layout_width="wrap_content"
            android:layout_height="121dp"
            android:contentDescription="@string/selectNonStrikerContentDescription"
            app:srcCompat="@drawable/nonstriker" />

        <TextView
            android:id="@+id/nSrTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/selectNonStrikerTextView" />
    </LinearLayout>

    <TextView
        android:id="@+id/bowlingTextView"
        style="@style/BaseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bowlingTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42000002" />

    <LinearLayout
        android:id="@+id/selectBowLayout"
        android:layout_width="124dp"
        android:layout_height="142dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6">

        <ImageView
            android:id="@+id/bowImageView"
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:contentDescription="@string/selectBowlerContentDescription"
            app:srcCompat="@drawable/ball" />

        <TextView
            android:id="@+id/bowTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/selectBowlerTextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97">

        <Button
            android:id="@+id/backButton"
            style="@style/CommonButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/backButton" />

        <Button
            android:id="@+id/startScoringButton"
            style="@style/CommonButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/startScoringButton" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>