<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the button is pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid android:tint="#6200EE"/> <!-- Pressed state color -->
        </shape>
    </item>
    <!-- Default state when not pressed -->
    <item>
        <shape>
            <solid android:color="@color/violet_button_color"/> <!-- Default color -->
        </shape>
    </item>
</selector>
