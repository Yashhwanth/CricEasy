<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the RadioButton is checked -->
    <item android:state_checked="true">
        <shape>
            <solid android:color="#6200EE"/> <!-- Selected color -->
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <!-- Default state when unchecked -->
    <item>
        <shape>
            <solid android:color="@color/violet_button_color"/> <!-- Unselected color -->
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>
